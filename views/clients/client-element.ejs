<div class="card" style="width: 18rem;">
    <img src="<%= client.image %>" class="card-img-top" alt="<%= client.nom %>">
    <div class="card-body">
        <h5 class="card-title">
            <%= client.nom %>
        </h5>
        <p class="card-text">
            prenom:<%= client.prenom %>.
        </p>
        <p class="card-text">
            article_prefere:<%= client.article_prefere %>
        </p>
         <p class="card-text">
            numero_article:<%= client.id_article %>
        </p>
    </div>
    </div>
    <div class="card-footer"> 
        <button class="btn btn-primary">Edit</button>
        <button class="btn btn-danger">Delete</button>
        <button class="btn btn-success">Profile</button>
    </div>

</div>